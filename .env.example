# --- Настройки Postgres ---
# (эти переменные читает контейнер 'db')
POSTGRES_DB=calendar_db
POSTGRES_USER=calendar_user
POSTGRES_PASSWORD=calendar_password

# --- Настройки для Django и Бота ---
# (эти переменные читают 'web' и 'bot')
DB_NAME=calendar_db
DB_USER=calendar_user
DB_PASSWORD=calendar_password
DB_HOST=db
DB_PORT=5432

# --- Настройки Django ---
DJANGO_SECRET_KEY=dev-secret-key-change-this
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=*
SITE_BASE_URL=http://localhost:8000
EXPORT_TOKEN_MAX_AGE=900